pipeline {
	agent any
	tools {
		maven 'Maven3'
		jdk 'Java_On_Docker'
	}
	stages {
		stage('Initialize') {
			steps {
				sh '''
				echo "PATH = ${PATH}"
				echo "M2_HOME = ${M2_HOME}"
				'''
			}
		}

		stage('Build') {
			steps {
				sh 'cd gtas-parent && mvn clean install' // -Dskip.unit.tests=true
			}
			post {
				success {
					sh '''
					echo "Build Successful"
					'''
				}
			}
			} // end of Build step

			stage('Test') {
				steps {
					sh '''
				   echo "skipping tests"
