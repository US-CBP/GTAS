				//}
			}
		} // end stages
		post {
			success {
				emailext (
						subject: "BUILD PASSED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
						body: """<p>PASSED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
							<p>Check console output at &QUOT;<a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a>&QUOT;</p>""",
